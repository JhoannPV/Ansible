apiVersion: apps/v1
kind: Deployment
metadata:
  name: calendar-backend
  namespace: {{ K8S_NAMESPACE | default('calendar-app') }}
  labels:
    app: calendar-backend
spec:
  replicas: 1
  selector:
    matchLabels:
      app: calendar-backend
  template:
    metadata:
      labels:
        app: calendar-backend
    spec:
      initContainers:
        - name: wait-for-mongo
          image: busybox:1.36.1
          command: ["/bin/sh","-c"]
          args:
            - >-
              echo "Esperando a mongo-db:27017...";
              until nc -z mongo-db 27017; do echo "mongo-db no disponible, reintentando..."; sleep 2; done;
              echo "mongo-db disponible";
          # Algunas imágenes de busybox no traen nc por defecto, instalarlo si falta
          # Para máxima compatibilidad, usamos timeout en telnet si nc no existe
          # Pero mantenemos nc por simplicidad; si falla, las tareas de debug lo reflejarán
      containers:
        - name: backend
          image: {{ BACKEND_IMAGE | default('docker.io/jalbertobohorquez/calendar-backend:latest') }}
          imagePullPolicy: IfNotPresent
          ports:
            - containerPort: 3001
          envFrom:
            - secretRef:
                name: app-env
          readinessProbe:
            tcpSocket:
              port: 3001
            initialDelaySeconds: 5
            periodSeconds: 10
          livenessProbe:
            tcpSocket:
              port: 3001
            initialDelaySeconds: 10
            periodSeconds: 20
          resources:
            requests:
              cpu: "100m"
              memory: "128Mi"
            limits:
              cpu: "500m"
              memory: "512Mi"
