apiVersion: apps/v1
kind: Deployment
metadata:
  name: calendar-backend
  namespace: {{ K8S_NAMESPACE }}
  labels:
    app: calendar-backend
spec:
  replicas: 1
  selector:
    matchLabels:
      app: calendar-backend
  template:
    metadata:
      labels:
        app: calendar-backend
    spec:
      initContainers:
        - name: wait-for-mongo
          image: alpine:3.20
          command: ["/bin/sh","-c"]
          args:
            - >-
              set -e;
              echo "Instalando netcat...";
              apk add --no-cache netcat-openbsd >/dev/null 2>&1;
              echo "Esperando a mongo-db:27017...";
              until nc -z mongo-db 27017; do echo "mongo-db no disponible, reintentando..."; sleep 2; done;
              echo "mongo-db disponible";
      containers:
        - name: backend
          image: {{ BACKEND_IMAGE }}
          imagePullPolicy: Always
          ports:
            - containerPort: 3001
          envFrom:
            - secretRef:
                name: app-env
          readinessProbe:
            tcpSocket:
              port: 3001
            initialDelaySeconds: 5
            periodSeconds: 10
          livenessProbe:
            tcpSocket:
              port: 3001
            initialDelaySeconds: 10
            periodSeconds: 20
          resources:
            requests:
              cpu: "100m"
              memory: "128Mi"
            limits:
              cpu: "500m"
              memory: "512Mi"
