apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: sonarqube-data-pvc
  namespace: {{ SONAR_NAMESPACE }}
spec:
  accessModes: [ "ReadWriteOnce" ]
  storageClassName: microk8s-hostpath
  resources: { requests: { storage: 10Gi } }
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: sonarqube-ext-pvc
  namespace: {{ SONAR_NAMESPACE }}
spec:
  accessModes: [ "ReadWriteOnce" ]
  storageClassName: microk8s-hostpath
  resources: { requests: { storage: 2Gi } }
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: sonarqube
  namespace: {{ SONAR_NAMESPACE }}
spec:
  replicas: 1
  progressDeadlineSeconds: 1800
  strategy:
    type: Recreate
  selector:
    matchLabels: { app: sonarqube }
  template:
    metadata:
      labels: { app: sonarqube }
    spec:
      terminationGracePeriodSeconds: 120
      securityContext:
        fsGroup: 1000
        fsGroupChangePolicy: OnRootMismatch
      initContainers:
        - name: volume-permissions
          image: busybox:1.36.1
          command: ["sh","-c"]
          args:
            - |
              echo "Ajustando permisos en vol√∫menes SonarQube";
              for d in data extensions logs; do
                if [ -d "/opt/sonarqube/$d" ]; then
                  chown -R 1000:1000 /opt/sonarqube/$d || true;
                fi;
              done;
          securityContext:
            runAsUser: 0
          volumeMounts:
            - { name: sonar-data, mountPath: /opt/sonarqube/data }
            - { name: sonar-ext,  mountPath: /opt/sonarqube/extensions }
        - name: wait-for-postgres
          image: postgres:15-alpine
          env:
            - name: POSTGRES_USER
              valueFrom: { secretKeyRef: { name: sonarqube-db-secret, key: POSTGRES_USER } }
            - name: POSTGRES_PASSWORD
              valueFrom: { secretKeyRef: { name: sonarqube-db-secret, key: POSTGRES_PASSWORD } }
          command: ["sh","-c"]
          args:
            - |
              echo "Esperando a sonar-postgres:5432 ...";
              until pg_isready -h sonar-postgres -p 5432 -U "$POSTGRES_USER"; do echo "DB no lista"; sleep 3; done;
              echo "DB lista";
      containers:
        - name: sonarqube
          image: sonarqube:10.6.0-community
          resources:
            # Reducido para entorno de laboratorio / nodo con RAM limitada
            requests: { cpu: "300m", memory: "1024Mi" }
            limits:   { cpu: "1000m", memory: "2048Mi" }
          env:
            - name: SONAR_JDBC_URL
              value: jdbc:postgresql://sonar-postgres.{{ SONAR_NAMESPACE }}.svc.cluster.local:5432/{{ SONAR_DB_NAME }}
            - name: SONAR_JDBC_USERNAME
              valueFrom: { secretKeyRef: { name: sonarqube-db-secret, key: POSTGRES_USER } }
            - name: SONAR_JDBC_PASSWORD
              valueFrom: { secretKeyRef: { name: sonarqube-db-secret, key: POSTGRES_PASSWORD } }
            # Ajustes recomendados para entornos con memoria limitada / evitar GC agresivo
            - name: SONAR_SEARCH_JAVAADDITIONALOPTS
              value: "-Dnode.store.allow_mmap=false"
            - name: SONAR_SEARCH_JAVAOPTS
              value: "-Xms256m -Xmx256m -Dnode.store.allow_mmap=false"
            - name: SONAR_WEB_JAVAOPTS
              value: "-Xms384m -Xmx384m"
            - name: SONAR_CE_JAVAOPTS
              value: "-Xms384m -Xmx384m"
          ports:
            - containerPort: 9000
          startupProbe:
            httpGet: { path: /, port: 9000 }
            periodSeconds: 20
            failureThreshold: 45   # ~15 min
          readinessProbe:
            httpGet: { path: /, port: 9000 }
            initialDelaySeconds: 10
            periodSeconds: 10
            timeoutSeconds: 5
            failureThreshold: 12
          livenessProbe:
            httpGet: { path: /, port: 9000 }
            initialDelaySeconds: 300
            periodSeconds: 30
            timeoutSeconds: 5
            failureThreshold: 6
          volumeMounts:
            - { name: sonar-data, mountPath: /opt/sonarqube/data }
            - { name: sonar-ext,  mountPath: /opt/sonarqube/extensions }
      volumes:
        - { name: sonar-data, persistentVolumeClaim: { claimName: sonarqube-data-pvc } }
        - { name: sonar-ext,  persistentVolumeClaim: { claimName: sonarqube-ext-pvc } }
{% if SONAR_NODE_SELECTOR is defined and SONAR_NODE_SELECTOR %}
  nodeSelector:
{% for k,v in SONAR_NODE_SELECTOR.items() %}
    {{ k }}: {{ v | quote }}
{% endfor %}
{% endif %}
---
apiVersion: v1
kind: Service
metadata:
  name: sonarqube
  namespace: {{ SONAR_NAMESPACE }}
spec:
  type: ClusterIP
  selector: { app: sonarqube }
  ports:
    - name: web
      port: 9000
      targetPort: 9000