# Copia este archivo a env.yml y completa los valores.

MONGO_INITDB_USERNAME: ""
MONGO_INITDB_PASSWORD: ""
MONGO_DB_NAME: "calendardb"
# Usa authSource=admin porque el usuario creado por MONGO_INITDB_ROOT_* reside en 'admin'
MONGO_URL: "mongodb://<user>:<pass>@mongo-db:27017/?authSource=admin"

# Genere el JWT_SEED con este comando "openssl rand -hex 32"
JWT_SEED: ""
PORT: 3001
VITE_API_URL: "/api"

# Imagenes
FRONTEND_IMAGE: "docker.io/jalbertobohorquez/calendar-frontend:latest"
BACKEND_IMAGE: "docker.io/jalbertobohorquez/calendar-backend:latest"
MONGODB_IMAGE: "docker.io/jalbertobohorquez/mongodb:latest"

# Namespace de Kubernetes
K8S_NAMESPACE: "calendar-app"

# Hostname para exponer vía Ingress (opcional)
# Añade este hostname a /etc/hosts apuntando al IP del nodo (controller/worker)
HOST_NAME: "calendar.local"

# Almacenamiento de MongoDB (hostpath-storage de MicroK8s)
MONGODB_STORAGE_SIZE: "5Gi"
# STORAGE_CLASS_NAME: "microk8s-hostpath" # opcional, por defecto microk8s-hostpath

# Levantar Agent
AZP_URL: ""
AZP_TOKEN: ""
AZP_POOL: ""
AZP_AGENT_NAME: ""

# Optional overrides
# Desired extraction/working directory
agent_dir: "/home/sysadmin/agent"
# Work directory under agent_dir
agent_work_dir: "_work"
agent_as_service: true
agent_replace: true
# Which user should own and run the agent
agent_user: "sysadmin"
